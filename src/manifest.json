{
  "manifest_version": 3,
  "name": "Mindful Redirect",
  "version": "1.0",
  "description": "Redirects blocked websites onto a page, where you can choose to exit, redirect, or access the site. To gain access, you must first journal down your thoughts, go through a mindfulness routine, or wait for a timer to count down.",
  "permissions": [
    "activeTab", "storage", "scripting", "tabs", "webNavigation", "webRequest", "declarativeContent"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png",
      "500": "images/icon-500.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png",
      "500": "images/icon-500.png"
  }
}

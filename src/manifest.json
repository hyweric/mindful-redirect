{
  "manifest_version": 3,
  "name": "Redirect Extension",
  "version": "1.0",
  "description": "Redirects to a popup on certain websites",
  "permissions": [
    "activeTab", "storage", "scripting", "tabs", "webNavigation", "webRequest", "declarativeContent", "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
